# ============================================================================
# MCP Threat Hunter Configuration
# ============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# ============================================================================

# ----------------------------------------------------------------------------
# SPLUNK CONFIGURATION
# ----------------------------------------------------------------------------
SPLUNK_HOST=your-splunk-host.example.com
SPLUNK_PORT=8089
SPLUNK_USERNAME=admin
SPLUNK_PASSWORD=your-password-here

# Set to true if using valid SSL certificate
# Set to false for self-signed certs (common in home labs)
SPLUNK_VERIFY_SSL=false

# ----------------------------------------------------------------------------
# VIRUSTOTAL API (Free tier: 4 req/min, 500/day)
# Get your API key: https://www.virustotal.com/gui/my-apikey
# ----------------------------------------------------------------------------
VIRUSTOTAL_API_KEY=your-virustotal-api-key-here

# ----------------------------------------------------------------------------
# ABUSEIPDB API (Free tier: 1000 checks/day)
# Get your API key: https://www.abuseipdb.com/account/api
# ----------------------------------------------------------------------------
ABUSEIPDB_API_KEY=your-abuseipdb-api-key-here

# ----------------------------------------------------------------------------
# LOGGING (optional)
# ----------------------------------------------------------------------------
# LOG_LEVEL: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# LOG_FILE: Path to log file (leave empty for stderr only)
# LOG_FILE=/var/log/mcp-threat-hunter.log

# ----------------------------------------------------------------------------
# DEFAULT SEARCH PARAMETERS (optional)
# ----------------------------------------------------------------------------
# DEFAULT_EARLIEST=-24h
# DEFAULT_LATEST=now
# MAX_RESULTS=1000
